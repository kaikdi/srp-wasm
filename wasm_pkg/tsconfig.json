{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": false,
    "baseUrl": "..",
    "paths": {
      "srp-wasm/client": ["wasm_pkg/dist/client"],
      "srp-wasm/server": ["wasm_pkg/dist/server"]
    }
  },
  "include": ["src/**/*"]
}
